# =============================================================================
# Beneat Solana - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# -----------------------------------------------------------------------------
# Solana Network Configuration
# -----------------------------------------------------------------------------

# RPC endpoint for Solana devnet (default: public endpoint)
NEXT_PUBLIC_RPC_URL=https://api.devnet.solana.com

# MagicBlock Ephemeral Rollup RPC endpoint
MAGICBLOCK_ER_RPC=https://devnet.magicblock.app

# -----------------------------------------------------------------------------
# Ghost-Bridge Program Configuration
# -----------------------------------------------------------------------------

# Ghost-bridge program ID (deployed on devnet)
NEXT_PUBLIC_GHOST_BRIDGE_PROGRAM_ID=8w95bQ7UzKHKa4NYvyVeAVGN3dMgwshJhhTinPfabMLA

# Vault program ID (deployed on devnet)
NEXT_PUBLIC_VAULT_PROGRAM_ID=8aHzRurS8RmRSxgJ4DSjGtQooMgwE59VPxLwPdVr8QWX

# Ghost-crank program ID (deployed on devnet)
NEXT_PUBLIC_GHOST_CRANK_PROGRAM_ID=7VvD7j99AE7q9PC9atpJeMEUeEzZ5ZYH7WqSzGdmvsqv

# -----------------------------------------------------------------------------
# TEE (Trusted Execution Environment) Configuration
# -----------------------------------------------------------------------------

# TEE public key for order encryption (x25519/Curve25519 public key)
# This is the public key of the TEE that will decrypt and execute orders
# Format: 32-byte hex string (64 hex characters)
# Derive from private key: set ECIES_CONFIG.ellipticCurve='x25519' before creating PrivateKey
NEXT_PUBLIC_TEE_PUBLIC_KEY=

# TEE private key for decryption and order execution (BACKEND ONLY - never expose)
# Format: 32-byte hex string (private key) or 64-byte hex string (full keypair)
# WARNING: This key has signing authority over delegated accounts
TEE_PRIVATE_KEY=

# -----------------------------------------------------------------------------
# Helius API Configuration
# -----------------------------------------------------------------------------

# Helius API key for enhanced RPC, webhooks, and transaction parsing
# Get your key at: https://www.helius.dev/
NEXT_PUBLIC_HELIUS_API_KEY=

# Webhook URL for Helius to send transaction notifications
# This should be your deployed app's webhook endpoint
HELIUS_WEBHOOK_URL=

# Webhook secret for verifying Helius webhook signatures (optional but recommended)
HELIUS_WEBHOOK_SECRET=

# -----------------------------------------------------------------------------
# Crank Service Configuration
# -----------------------------------------------------------------------------

# Polling interval for the TEE monitoring service (milliseconds)
# Lower values = more responsive triggers, higher RPC usage
# Recommended: 1000-5000ms
CRANK_POLL_INTERVAL_MS=2000

# Maximum number of orders to monitor simultaneously
CRANK_MAX_MONITORED_ORDERS=100

# -----------------------------------------------------------------------------
# Pyth Price Feed Configuration
# -----------------------------------------------------------------------------

# Pyth Hermes API endpoint for price feeds
# Default: https://hermes.pyth.network/v2/updates/price/latest
PYTH_HERMES_URL=https://hermes.pyth.network/v2/updates/price/latest

# Pyth Benchmarks API for historical data (TradingView integration)
# Default: https://benchmarks.pyth.network/v1/shims/tradingview/history
PYTH_BENCHMARKS_URL=https://benchmarks.pyth.network/v1/shims/tradingview/history

