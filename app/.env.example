# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------

# Enable debug logging for development
DEBUG_MODE=false

# Test wallet private key for integration tests (JSON array format)
# Only set this in development/test environments
# Example: [1,2,3,...] (64 bytes)
TEST_WALLET_PRIVATE_KEY=
